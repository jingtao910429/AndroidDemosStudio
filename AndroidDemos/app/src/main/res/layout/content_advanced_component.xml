<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_advanced_component"
    tools:context="com.rongyu.wwt.androiddemos.AdvancedComponentActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoCompleteTextView自动完成文本框"
        android:id="@+id/autoCompeleteTV"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spinner列表选择框"
        android:id="@+id/spinner"
        android:layout_below="@+id/autoCompeleteTV"
        android:layout_alignEnd="@+id/autoCompeleteTV"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:id="@+id/date_pickerBtn"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/spinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:id="@+id/timeBtn"
        android:layout_below="@+id/date_pickerBtn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/date_pickerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度"
        android:id="@+id/btn_progress"
        android:layout_below="@id/timeBtn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/timeBtn" />
</RelativeLayout>
